{
  "name": "mejora",
  "version": "2.0.1",
  "description": "Prevent regressions. Allow improvement.",
  "keywords": [
    "regression",
    "baseline",
    "ci",
    "continuous-integration",
    "linting",
    "eslint",
    "typescript",
    "quality",
    "code-quality",
    "developer-tools",
    "cli",
    "testing",
    "incremental",
    "legacy-code"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jimmy-guzman/mejora.git"
  },
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": "./dist/index.mjs"
  },
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "bin": {
    "mejora": "./dist/run.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "check": "pnpm lint && pnpm typecheck && pnpm coverage && pnpm format && pnpm knip",
    "coverage": "vitest run --coverage",
    "dev": "tsdown --watch",
    "format": "prettier --check --cache --experimental-cli .",
    "format:fix": "prettier --write --cache --experimental-cli .",
    "knip": "knip",
    "lint": "eslint --cache --cache-location node_modules/.cache/eslint .",
    "lint:fix": "pnpm lint --fix",
    "prepack": "pnpm build && clean-pkg-json",
    "prepare": "is-in-ci || lefthook install",
    "test": "vitest",
    "typecheck": "tsc"
  },
  "prettier": "@jimmy.codes/prettier-config",
  "devDependencies": {
    "@commitlint/config-conventional": "20.3.0",
    "@jimmy.codes/eslint-config": "6.30.0",
    "@jimmy.codes/prettier-config": "2.1.2",
    "@types/node": "24.10.4",
    "@vitest/coverage-v8": "4.0.16",
    "clean-pkg-json": "1.3.0",
    "commitlint": "20.3.0",
    "eslint": "9.39.2",
    "gitzy": "6.5.7",
    "is-in-ci": "2.0.0",
    "knip": "5.79.0",
    "lefthook": "2.0.13",
    "lilconfig": "3.1.3",
    "pathe": "2.0.3",
    "prettier": "3.7.4",
    "publint": "0.3.16",
    "tsdown": "0.18.4",
    "typescript": "5.9.3",
    "vite-tsconfig-paths": "6.0.3",
    "vitest": "4.0.16"
  },
  "peerDependencies": {
    "eslint": "^9.34.0",
    "typescript": "^5.0.0"
  },
  "peerDependenciesMeta": {
    "eslint": {
      "optional": true
    },
    "typescript": {
      "optional": true
    }
  },
  "packageManager": "pnpm@10.27.0",
  "engines": {
    "node": ">= 22.18.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "gitzy": {
    "useCommitlintConfig": true
  }
}
